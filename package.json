{
	"name": "itcb-testing",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"pre-commit": "lint-staged",
		"prepare": "husky",
		"check": "npx @biomejs/biome check --write",
		"type-check": "tsc --noEmit",
		"trigger-ci": "git commit --allow-empty -m \"trigger CI workflows for testing\" && git push",
		"test": "playwright test",
		"test:headed": "playwright test --headed",
		"test:debug": "playwright test --debug",
		"test:chrome": "playwright test --project=chromium",
		"test:sanity": "TEST_TAGS='@sanity' playwright test",
		"test:regression": "TEST_TAGS='@regression' playwright test",
		"test:sanity:chrome": "TEST_TAGS='@sanity' playwright test --project=chromium",
		"test:regression:chrome": "TEST_TAGS='@regression' playwright test --project=chromium",
		"report": "playwright show-report",
		"codegen": "playwright codegen"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ITCB-2/ITCB-Testing.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ITCB-2/ITCB-Testing/issues"
	},
	"homepage": "https://github.com/ITCB-2/ITCB-Testing#readme",
	"description": "",
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"@faker-js/faker": "^10.1.0",
		"@netanelh2/playwright-framework": "^6.0.0",
		"@playwright/test": "^1.56.1",
		"@types/node": "^24.9.1",
		"dotenv": "^17.2.3",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"lint-staged": "^16.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true --write"
		]
	}
}
