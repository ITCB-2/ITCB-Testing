{
  "name": "itcb-testing",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "docker:build": "docker build -t playwright-tests .",
    "docker:test": "docker run playwright-tests npm run test",
    "test": "playwright test",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "chrome": "playwright test --project=chromium",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "lint:fix": "eslint src/**/*.ts --fix --no-warn-ignored",
    "lint:check": "eslint src/**/*.ts --max-warnings 0 --no-warn-ignored",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && npm run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NetanelH2/ITCB-Testing.git"
  },
