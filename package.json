{
  "name": "itcb-testing",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "playwright test",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "lint:check": "eslint src/**/*.ts --max-warnings 0 --no-warn-ignored",
    "format:check": "prettier --check 'src/**/*.ts'",
    "check": "npm run lint:check && npm run format:check && npx tsc --noEmit",
    "fix": "prettier --write 'src/**/*.ts' && eslint src/**/*.ts --fix --no-warn-ignored"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NetanelH2/ITCB-Testing.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NetanelH2/ITCB-Testing/issues"
  },
  "homepage": "https://github.com/NetanelH2/ITCB-Testing#readme",
  "description": "",
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
