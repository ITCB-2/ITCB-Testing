{
	"name": "itcb-testing",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"build": "docker compose build",
		"pre-commit": "lint-staged",
		"prepare": "husky",
		"check": "npx @biomejs/biome check --write --error-on-warnings",
		"type-check": "tsc --noEmit",
		"trigger-ci": "git commit --allow-empty -m \"trigger CI workflows for testing\" && git push",
		"report": "playwright show-report",
		"codegen": "playwright codegen",
		"test": "npx playwright test",
		"test:headed": "npx playwright test --headed",
		"test:chrome": "npx playwright test --project=chromium",
		"test:sanity": "TEST_TAGS='@sanity' npx playwright test",
		"test:nightly": "TEST_TAGS='@nightly' npx playwright test",
		"test:sanity:chrome": "TEST_TAGS='@sanity' npx playwright test --project=chromium",
		"test:nightly:chrome": "TEST_TAGS='@nightly' npx playwright test --project=chromium"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ITCB-2/ITCB-Testing.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ITCB-2/ITCB-Testing/issues"
	},
	"homepage": "https://github.com/ITCB-2/ITCB-Testing#readme",
	"description": "",
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@faker-js/faker": "^10.1.0",
		"@playwright/test": "^1.56.1",
		"@types/node": "^24.9.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": [
			"biome check --write --error-on-warnings"
		]
	}
}
